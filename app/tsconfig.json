{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["es6", "es7", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es5",
    "declaration": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "locale": "ko",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["build", "node_modules"]
}

